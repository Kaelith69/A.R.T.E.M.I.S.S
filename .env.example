# Copy this file to .env and fill in your values.

# Required: your Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Required: comma-separated list of admin Telegram user IDs
# Example: ADMIN_IDS=123456789,987654321
ADMIN_IDS=

# Optional: number of violations before a user is banned (default: 3)
FLAG_THRESHOLD=3

# Optional: path to the SQLite database file (default: violations.db)
DB_FILE=violations.db

# Optional: directories for flagged media (defaults shown below)
FLAGGED_IMAGES_DIR=flagged_images
FLAGGED_VIDEOS_DIR=flagged_videos

# Optional: secret key for the Flask dashboard (auto-generated if omitted)
DASHBOARD_SECRET_KEY=change_me_to_a_long_random_string
